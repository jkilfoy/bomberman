{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "server/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
